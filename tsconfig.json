{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    // "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020",

    // "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "#config/*": ["config/*"],
      "#src/*": ["src/*"],
      "#test/*": ["test/*"],
    },

    /* Additional rules */
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
